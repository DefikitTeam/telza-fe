{
     "compilerOptions": {
          "lib": ["dom", "dom.iterable", "esnext", "es6"],
          "noImplicitAny": true,
          "noImplicitThis": true,
          "strictNullChecks": true,
          "allowJs": true,
          "skipLibCheck": true,
          "strict": true,
          "noEmit": true,
          "esModuleInterop": true,
          "module": "esnext",
          "moduleResolution": "bundler",
          "resolveJsonModule": true,
          "isolatedModules": true,
          "jsx": "preserve",
          "incremental": true,
          "plugins": [
               {
                    "name": "next"
               }
          ],
          "paths": {
               "@/*": ["./src/*"],
               "~/*": ["./public/*"]
          }
     },
     "include": [
          "next.config.mjs",
          "tailwind.config.ts",
          "next-env.d.ts",
          "**/*.ts",
          "**/*.tsx",
          ".next/types/**/*.ts",
          "src/types/**/*.d.ts"
     ],
     "exclude": ["node_modules"]
}
